<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/black"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.redinput.compassview.CompassView
        android:id="@+id/compassView"
        app:backgroundColor="#000"
        app:degrees="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lineColor="#FFFFFF"
        app:markerColor="#FF0000"
        app:rangeDegrees="180.0"
        app:showMarker="true"
        app:textColor="#FFFFFF"
        android:layout_height="@dimen/compass_view_height"
        android:layout_width="match_parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/accuracy_view_height"
        >
        <TextView
            android:textSize="24sp"
            android:textColor="@color/white"
            android:id="@+id/accuracyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>